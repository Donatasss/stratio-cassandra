<project basedir="." default="jar" name="apache-cassandra-stratio" xmlns:artifact="antlib:org.apache.maven.artifact.ant">

    <import file="build.xml"/>

    <property file="build.properties.stratio" />
    <condition property="nexus-repository-id" value="${nexus-releases-repository-id}" else="${nexus-snapshots-repository-id}">
        <isset property="release"/>
    </condition>

    <condition property="nexus-repository-url" value="${nexus-releases-repository-url}" else="${nexus-snapshots-repository-url}">
        <isset property="release"/>
    </condition>

    <echo>maven-repository-id: ${nexus-repository-id}</echo>
    <echo>maven-repository-url: ${nexus-repository-url}</echo>

    <target name="publish-nexus"
            depends="mvn-install"
            description="Publishes the artifacts to the Nexus repository">

        <echo>maven-repository-id: ${nexus-repository-id}</echo>
        <echo>maven-repository-url: ${nexus-repository-url}</echo>

        <macrodef name="deploy-nexus">
            <attribute name="pomFile"/>
            <attribute name="file"/>
            <attribute name="classifier" default=""/>
            <attribute name="packaging" default="jar"/>
            <sequential>
                <artifact:mvn mavenVersion="${maven.version}" fork="true" failonerror="true">
                    <jvmarg value="-Xmx512m"/>

                    <arg value="deploy:deploy-file" />
                    <arg value="-DretryFailedDeploymentCount=5" />
                    <arg value="-Durl=${nexus-repository-url}" />
                    <arg value="-DrepositoryId=${nexus-repository-id}" />
                    <arg value="-DpomFile=@{pomFile}" />
                    <arg value="-Dclassifier=@{classifier}" />
                    <arg value="-Dfile=@{file}" />
                </artifact:mvn>
            </sequential>
        </macrodef>

        <!-- the parent -->
        <deploy-nexus pomFile="${build.dir}/${final.name}-parent.pom"
                      file="${build.dir}/${final.name}-parent.pom"
                      packaging="pom"/>

        <!-- the distribution -->
        <deploy-nexus pomFile="${build.dir}/${final.name}-dist.pom"
                      file="${build.dir}/${final.name}-dist.pom"
                      packaging="pom"/>
        <deploy-nexus pomFile="${build.dir}/${final.name}-dist.pom"
                      file="${build.dir}/${final.name}-bin.tar.gz"
                      packaging="tar.gz"
                      classifier="bin"/>
        <deploy-nexus pomFile="${build.dir}/${final.name}-dist.pom"
                      file="${build.dir}/${final.name}-src.tar.gz"
                      packaging="tar.gz"
                      classifier="src"/>

        <!-- the cassandra-thrift jar -->
        <deploy-nexus pomFile="${build.dir}/${ant.project.name}-thrift-${version}.pom"
                      file="${build.dir}/${ant.project.name}-thrift-${version}.jar"/>
        <deploy-nexus pomFile="${build.dir}/${ant.project.name}-thrift-${version}.pom"
                      file="${build.dir}/${ant.project.name}-thrift-${version}-sources.jar"
                      classifier="sources"/>
        <deploy-nexus pomFile="${build.dir}/${ant.project.name}-thrift-${version}.pom"
                      file="${build.dir}/${ant.project.name}-thrift-${version}-javadoc.jar"
                      classifier="javadoc"/>

        <!-- the cassandra-clientutil jar -->
        <deploy-nexus pomFile="${build.dir}/${ant.project.name}-clientutil-${version}.pom"
                      file="${build.dir}/${ant.project.name}-clientutil-${version}.jar"/>
        <deploy-nexus pomFile="${build.dir}/${ant.project.name}-clientutil-${version}.pom"
                      file="${build.dir}/${ant.project.name}-clientutil-${version}-sources.jar"
                      classifier="sources"/>
        <deploy-nexus pomFile="${build.dir}/${ant.project.name}-clientutil-${version}.pom"
                      file="${build.dir}/${ant.project.name}-clientutil-${version}-javadoc.jar"
                      classifier="javadoc"/>
        <!-- the cassandra-all jar -->
        <deploy-nexus pomFile="${build.dir}/${final.name}.pom"
                      file="${build.dir}/${final.name}.jar"/>
        <deploy-nexus pomFile="${build.dir}/${final.name}.pom"
                      file="${build.dir}/${final.name}-sources.jar"
                      classifier="sources"/>
        <deploy-nexus pomFile="${build.dir}/${final.name}.pom"
                      file="${build.dir}/${final.name}-javadoc.jar"
                      classifier="javadoc"/>
    </target>
</project>
